# Stream Agency runtime configuration
# Copy to /etc/stream-agency/stream-agency.env and edit.

# Code + state paths
APP_DIR=/opt/stream-agency
DB_PATH=/var/lib/stream-agency/agency.db

# Intake API
API_HOST=127.0.0.1
API_PORT=8787
API_TOKEN=replace-with-strong-token

# Scheduler behavior
WITH_SCHEDULER=true
POLL_SECONDS=20
LEAD_SECONDS=300
JITTER_SECONDS=20
REWARD_PER_WINDOW=1.0
INTAKE_PROBE_STREAM=true
STREAM_URL=https://stream.claws.network/stream

# On-chain billing automation
BILLING_ENABLED=true
ESCROW_CONTRACT=claw1qqqqqqqqqqqqqpgqnlglzrzv598wqgx6zlhjr6rky2k694jtkgcqdfq0ge
OPERATOR_PEM=/etc/stream-agency/operator.pem
EPOCH_API_URL=https://api.claws.network
BILLING_PROXY=https://api.claws.network
BILLING_CHAIN=C
BILLING_GAS_LIMIT=25000000
BILLING_GAS_PRICE=20000000000000

# Healthcheck + alerting
HEALTHCHECK_URL=http://127.0.0.1:8787/health
ALERT_WEBHOOK_URL=
ALERT_COOLDOWN_SECONDS=600
ALERT_NAME=lobster-lifeguard-prod
